      <context class="- topic/section task/context ">
         <note id="note_upr_ppt_5gc" type="note" class="- topic/note ">
            <p class="- topic/p ">The engine will not start unless the transmission directional control lever is in the
        NEUTRAL position.</p>
         </note>
         <fig id="fig_ogn_qpt_5gc" class="- topic/fig ">
            <image href="media/image756a.png"
                   id="image_rgn_qpt_5gc"
                   placement="inline"
                   class="- topic/image "/>
         </fig>
         <p class="- topic/p ">Typical Example</p>
      </context>
      <steps class="- topic/ol task/steps ">
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">Engage the parking brake, if not already engaged.</cmd>
         </step>
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">Place the transmission directional control lever in NEUTRAL position.</cmd>
            <info class="- topic/itemgroup task/info ">
               <note type="notice" class="- topic/note ">
                  <p class="- topic/p ">When you restart the engine after turning off it, wait 4 to 5 seconds and restart
            it to protect the starter.</p>
               </note>
            </info>
         </step>
