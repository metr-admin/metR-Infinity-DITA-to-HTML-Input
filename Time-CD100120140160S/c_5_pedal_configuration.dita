                           <b class="+ topic/ph hi-d/b ">A. Accelerator Pedal</b>
                        </entry>
                        <entry class="- topic/entry ">
                           <p class="- topic/p ">
                              <table frame="all"
                                     rowsep="1"
                                     colsep="1"
                                     id="table_cjd_j55_vgc"
                                     class="- topic/table ">
