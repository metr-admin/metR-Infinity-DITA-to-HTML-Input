   <taskbody>
      <steps class="- topic/ol task/steps ">
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">Connect the PE cables to the PE busbar.</cmd>
         </step>
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">Connect the power cables:</cmd>
            <substeps class="- topic/ol task/substeps ">
               <substep class="- topic/li task/substep ">
                  <cmd class="- topic/ph task/cmd ">Connect the input cables to the X001 (L1, L2,
                     L3, N<fn class="- topic/fn ">No N if input transformer is installed</fn>)
                     terminals.</cmd>
               </substep>
               <substep class="- topic/li task/substep ">
                  <cmd class="- topic/ph task/cmd ">Connect the bypass cables to the X301 (L1, L2,
                     L3) terminals.</cmd>
               </substep>
               <substep class="- topic/li task/substep ">
                  <cmd class="- topic/ph task/cmd ">Connect the output cables to the X601 (<b
                        class="+ topic/ph hi-d/b ">3:3</b>: L1, L2, L3, N)/(<b
                        class="+ topic/ph hi-d/b ">3:1 10–20 kVA</b>: L, N))/(<b
                        class="+ topic/ph hi-d/b ">3:1 30–80 kVA</b>: L1, L2) terminals.</cmd>
               </substep>
               <substep class="- topic/li task/substep ">
                  <cmd class="- topic/ph task/cmd ">Connect the battery cables to the X201 (B+,B-)
                     terminals.</cmd>
               </substep>
            </substeps>
