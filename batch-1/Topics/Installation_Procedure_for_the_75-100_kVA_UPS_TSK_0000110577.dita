      <context class="- topic/section task/context ">
         <note class="- topic/note ">The UPS is configured for dual mains as default.</note>
         <note class="- topic/note ">Both top and bottom cable entry is available.</note>
      </context>
      <steps class="- topic/ol task/steps ">
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">Move the UPS cabinet to the final location with a forklift
or a low profile 21 inch pallet jack by lifting from the sides.</cmd>
         </step>
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">
               <xref href="Remove_Kick_Plates_TSK_0000161962.dita"
                     format="dita"
                     scope="local"
                     type="task"
                     class="- topic/xref "/>.</cmd>
         </step>
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">
               <xref href="Connect_the_Battery_Cables_from_an_Adjacent_Battery_Cabinet_to_the_UPS_TSK_0000110578.dita"
                     format="dita"
                     scope="local"
                     type="task"
                     class="- topic/xref "/>.</cmd>
         </step>
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">
               <xref href="Convert_the_75-100_kVA_UPS_from_Dual_Mains_to_Single_Mains_TSK_0000110550.dita"
                     format="dita"
                     scope="local"
                     type="task"
                     class="- topic/xref "/>.</cmd>
         </step>
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">
               <xref href="Connect_the_Power_Cables_on_the_75-100_kVA_UPS_0000103943.dita"
                     format="dita"
                     scope="local"
                     type="task"
                     class="- topic/xref "/>.</cmd>
         </step>
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">
               <xref href="Route_the_Control_Cables_75-100_kVA_0000161959.dita"
                     format="dita"
                     scope="local"
                     type="task"
                     class="- topic/xref "/>.</cmd>
         </step>
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">
               <xref href="Connect_the_Control_Cables_for_the_25-50_kVA_UPS_0000161459.dita"
                     format="dita"
                     scope="local"
