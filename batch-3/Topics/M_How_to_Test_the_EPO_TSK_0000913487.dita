         <hazardstatement id="LossOFOUTPUTVOLTAGEAlwaysCoordinate-A69BEF41"
                          type="notice"
                          class="+ topic/note hazard-d/hazardstatement ">
            <messagepanel class="+ topic/ul hazard-d/messagepanel ">
               <typeofhazard class="+ topic/li hazard-d/typeofhazard ">Loss OF OUTPUT VOLTAGE</typeofhazard>
               <howtoavoid class="+ topic/li hazard-d/howtoavoid ">Always coordinate maintenance and a test of the emergency
power off (EPO) with the users of the consumers. Make sure that users
of the connected consumers are informed before proceeding.</howtoavoid>
            </messagepanel>
         </hazardstatement>
