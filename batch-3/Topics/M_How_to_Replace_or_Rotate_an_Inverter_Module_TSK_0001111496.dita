         <step conref="M_How_to_Change_to_Manual_Bypass_from_Static_Switch_Operation_TSK_0001086583.dita#HowToChangeToManualBypassFromStatic-FA99853D/RotateTheMBSToPosition1.-1674D146"
               class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd "/>
         </step>
         <step id="SwitchOffTheSupplyToTheInverterModu-1D25131F"
               platform="Modular-AC"
               class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">Switch off the supply to the inverter modules
by either:</cmd>
            <substeps class="- topic/ol task/substeps ">
               <substep class="- topic/li task/substep ">
                  <cmd class="- topic/ph task/cmd ">
                     <b class="+ topic/ph hi-d/b ">If the system has an inverter input breaker:</b> Open
the inverter input breaker.</cmd>
               </substep>
               <substep class="- topic/li task/substep ">
                  <cmd class="- topic/ph task/cmd ">
                     <b class="+ topic/ph hi-d/b ">If the system does not have an inverter input breaker:</b> Open the rectifier mains breaker(s) and the battery breaker.</cmd>
               </substep>
            </substeps>
         </step>
         <step id="OpenTheInverterInputBreaker.-1D9CF69A"
               platform="Modular-Inverter"
               class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">Open the inverter input breaker.</cmd>
         </step>
         <step id="WaitUntilTheLEDsOnTheInverterModule-1D9C3EF4"
               platform="Modular-DC Modular-AC"
               class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">Wait until the LEDs on the inverter
modules and the static switch are extinguished.</cmd>
         </step>
         <step class="- topic/li task/step ">
            <cmd conref="M_Replace_Module_TSK_0000708918.dita#ReplaceModule-E7FEDDA3/LoosenTheScrewAOfTheModule.-10C87055"
                 class="- topic/ph task/cmd ">Loosen the screw <b class="+ topic/ph hi-d/b ">(A)</b> of the module.</cmd>
            <info class="- topic/itemgroup task/info ">
               <image href="../Images/Modular_AC-Modules_Replace-Inverter-1_0001129871.svg"
                      placement="inline"
                      class="- topic/image "/>
            </info>
         </step>
         <step class="- topic/li task/step ">
            <cmd conref="M_Replace_Module_TSK_0000708918.dita#ReplaceModule-E7FEDDA3/RemoveTheModuleBCompletelyWithBothH-10C8A414"
                 class="- topic/ph task/cmd "/>
            <info class="- topic/itemgroup task/info ">
               <image href="../Images/Modular_AC-Modules_Replace-Inverter-2_0001129870.svg"
                      placement="inline"
                      class="- topic/image "/>
            </info>
         </step>
         <step class="- topic/li task/step ">
            <cmd conref="M_Replace_Module_TSK_0000708918.dita#ReplaceModule-E7FEDDA3/IfTheModuleIsInoperableCorrectlyDis-10C8B3FB"
                 class="- topic/ph task/cmd "/>
         </step>
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">Check that the rating of the module is according to the <i class="+ topic/ph hi-d/i ">Technical Data</i>. For 24, 48 and 60 V DC modules, verify that the
DIP switch is in the right position.</cmd>
         </step>
         <step class="- topic/li task/step ">
            <cmd conref="M_Replace_Module_TSK_0000708918.dita#ReplaceModule-E7FEDDA3/CarefullyInsertTheNewModuleBWithBot-10C8C0B3"
                 class="- topic/ph task/cmd "/>
            <info class="- topic/itemgroup task/info ">
               <image href="../Images/Modular_AC-Modules_Replace-Inverter-3_0001129869.svg"
                      placement="inline"
                      class="- topic/image "/>
            </info>
         </step>
         <step conref="M_Insert_Modules_in_the_Cabinet_TSK_0000667029.dita#InsertModulesInTheCabinet-CA415A6F/MakeSureThatTheModuleIsFullyInserte-1246B66F"
               class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd "/>
         </step>
         <step class="- topic/li task/step ">
            <cmd conref="M_Replace_Module_TSK_0000708918.dita#ReplaceModule-E7FEDDA3/TightenTheScrewAAtTheBottomByHand.-10C8CD4F"
                 class="- topic/ph task/cmd "/>
            <info class="- topic/itemgroup task/info ">
               <image href="../Images/Modular_AC-Modules_Replace-Inverter-4_0001129868.svg"
                      placement="inline"
                      class="- topic/image "/>
            </info>
         </step>
         <step id="SwitchBackTheSupplyToTheInverterMod-1D267D83"
               platform="Modular-AC"
               class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">Switch back the supply to the inverter
modules by either:</cmd>
            <substeps class="- topic/ol task/substeps ">
               <substep class="- topic/li task/substep ">
                  <cmd class="- topic/ph task/cmd ">
                     <b class="+ topic/ph hi-d/b ">If the system has an inverter input breaker:</b> Close
the inverter input breaker.</cmd>
               </substep>
               <substep class="- topic/li task/substep ">
                  <cmd class="- topic/ph task/cmd ">
                     <b class="+ topic/ph hi-d/b ">If the system does not have an inverter input breaker:</b> Close the rectifier mains breaker(s) and the battery breaker.</cmd>
               </substep>
            </substeps>
         </step>
         <step id="CloseTheInverterInputBreaker.-1D9C9C36"
               platform="Modular-Inverter"
               class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">Close the inverter input breaker.</cmd>
         </step>
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">Wait a few moments until the inverter module have initialized.</cmd>
            <stepresult class="- topic/itemgroup task/stepresult ">When the inverter module is initializing both the red
LED and the green LED flashes fast. When the module is operating correctly
only the green LED is illuminated.</stepresult>
         </step>
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">Close the door.</cmd>
         </step>
         <step class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">After the inverter have initialized the inverter numbering
needs to be reset:</cmd>
            <substeps class="- topic/ol task/substeps ">
               <substep class="- topic/li task/substep ">
                  <cmd class="- topic/ph task/cmd ">Make sure you are logged in as a user with at least <uicontrol translate="no" class="+ topic/ph ui-d/uicontrol ">Owner</uicontrol> access. </cmd>
                  <info class="- topic/itemgroup task/info ">
                     <note class="- topic/note "> If you are not logged in, a prompt to login will appear
when trying to access the menu.</note>
                  </info>
               </substep>
               <substep class="- topic/li task/substep ">
                  <cmd class="- topic/ph task/cmd ">Press the <uicontrol class="+ topic/ph ui-d/uicontrol ">Main menu</uicontrol> and navigate
to <uicontrol class="+ topic/ph ui-d/uicontrol ">Service &gt; Reality Modular AC &gt; Sign off module</uicontrol>.</cmd>
               </substep>
               <substep class="- topic/li task/substep ">
                  <cmd class="- topic/ph task/cmd ">Press the <uicontrol class="+ topic/ph ui-d/uicontrol ">Sign off module</uicontrol> button.</cmd>
               </substep>
               <substep class="- topic/li task/substep ">
                  <cmd class="- topic/ph task/cmd ">The inverter module numbering is reset and the module
toggle sliders are gray.</cmd>
               </substep>
            </substeps>
         </step>
         <step conref="M_How_to_Change_to_Static_Switch_Operation_from_Manual_or_Inverter_Bypass__0001086581.dita#HowToChangeToStaticSwitchOperationF-FA99B6FD/OnTheDisplayPressTheStaticSwitchIco-1D2B37EA"
               class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd "/>
         </step>
         <step conref="M_How_to_Change_to_Manual_Bypass_from_Static_Switch_Operation_TSK_0001086583.dita#HowToChangeToManualBypassFromStatic-FA99853D/OnTheDisplayCheckThatThePowerFlowIn-2B8F04E7"
               class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd ">On the display check that the power flow indicate bypass output.</cmd>
            <info class="- topic/itemgroup task/info ">(screen shot)</info>
         </step>
         <step conref="M_How_to_Change_to_Static_Switch_Operation_from_Manual_or_Inverter_Bypass__0001086581.dita#HowToChangeToStaticSwitchOperationF-FA99B6FD/OpenTheDoorAndRotateTheManualBypass-1D2921A9"
               class="- topic/li task/step ">
            <cmd class="- topic/ph task/cmd "/>
         </step>
         <step id="CloseTheDoorAndCheckThatTheDisplayi-94E41224"
               class="- topic/li task/step ">
            <cmd id="CloseTheDoorAndCheckThatTheDisplayi-94E43453"
                 class="- topic/ph task/cmd ">Close the door and
check that the <uicontrol class="+ topic/ph ui-d/uicontrol ">Display</uicontrol> indicates the correct
power flow and that no alarm LED is active.</cmd>
         </step>
      </steps>
