                        <entry class="- topic/entry ">
                           <p class="- topic/p ">Inverter input switch(es)</p>
                        </entry>
                        <entry class="- topic/entry ">
                           <p class="- topic/p ">
                              <b class="+ topic/ph hi-d/b ">For black start on the inverter input switch: </b>Open</p>
                           <p class="- topic/p ">
                              <b class="+ topic/ph hi-d/b ">For black start on the battery breaker: </b>Closed</p>
                        </entry>
                        <entry class="- topic/entry ">
                           <p class="- topic/p ">If applicable</p>
                        </entry>
                     </row>
                     <row platform="PxW" class="- topic/row ">
                        <entry class="- topic/entry ">
                           <p class="- topic/p ">Inverter output switch(es)</p>
                        </entry>
                        <entry class="- topic/entry ">
                           <p class="- topic/p ">Closed</p>
                        </entry>
                        <entry class="- topic/entry ">
                           <p class="- topic/p ">If applicable</p>
                        </entry>
                     </row>
                     <row class="- topic/row ">
                        <entry nameend="COLSPEC0" namest="col1" class="- topic/entry ">
                           <p class="- topic/p ">
