                        <entry class="- topic/entry ">
                           <p class="- topic/p ">Rectifier output switch(es)</p>
                        </entry>
                        <entry class="- topic/entry ">
                           <p class="- topic/p ">Closed</p>
                        </entry>
                        <entry class="- topic/entry ">
